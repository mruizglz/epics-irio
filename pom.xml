<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.iter.codac.units</groupId>
    <artifactId>epics-irio</artifactId>
    <packaging>codac</packaging>
    <version>1.2.0</version>
    <name>CODAC Core System epics-irio module</name>
    <description>CODAC Core System epics-irio module</description>
    <url>http://www.iter.org/</url>
 
    <parent>
        <groupId>org.iter.codac.units</groupId>
        <artifactId>maven-iter-settings</artifactId>
        <version>7.0.0</version>
    </parent>
    
    <!-- project properties -->
    <properties>
        <unit.type>module</unit.type>
         <version.release>1</version.release>
    </properties>

    <!-- parent pom.xml -->

    <!-- unit owner and developers -->
    <developers>
        <developer>
            <id>langer</id>
            <roles>
                <role>unit owner</role>
            </roles>
        </developer>       
        <developer>
            <id>ruizm</id>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>esquems</id>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>bernale</id>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <!-- configuration of how the project is built -->
    <build>
        <!-- default phase is compile -->
        <defaultGoal>compile</defaultGoal>
        <!-- this command is executed if you just write 'mvn' -->
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-iter-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <packaging>
                        <package>
                            <include type="module" name="irio-epics" />
                            <requires codac="true">epics-asyn</requires>
                            <requires codac="true">irio</requires>
                            <requires codac="true" buildonly="true">epics-asyn-devel</requires>
                            <requires codac="true" buildonly="true">irio-devel</requires>
                            <component>epics/irio</component>
                        </package>
                        <package develOf="" />
                        <package name="sdd">
                            <include type="source" target="sdd/xml/modules" source="src/main/sdd/cRIO" />
                            <include type="source" target="sdd/xml/modules" source="src/main/sdd/flexRIO/PXIe7961RNI6581" />
                            <include type="source" target="sdd/xml/modules" source="src/main/sdd/flexRIO/PXIe7966RNI1483" />
                            <include type="source" target="sdd/xml/modules" source="src/main/sdd/flexRIO/PXIe7966RNI5761" />
                        </package>
			<package name="doc">
                            <include type="doxygen" name="epics-irio" project="${project.name}" version="${project.version}" optimize="c">
                                <outputformat>html</outputformat>
                                <outputformat>pdf</outputformat>
                                <input>main/epics/irio-epicsApp/src</input>
                                <properties>
                                    <SORT_MEMBER_DOCS>NO</SORT_MEMBER_DOCS> 
                                    <HIDE_UNDOC_CLASSES>NO</HIDE_UNDOC_CLASSES>
                                    <EXTRACT_ALL>NO</EXTRACT_ALL>
				    <HIDE_UNDOC_MEMBERS>NO</HIDE_UNDOC_MEMBERS>
                                    <EXTRACT_PRIVATE>NO</EXTRACT_PRIVATE>
                                    <SOURCE_BROWSER>YES</SOURCE_BROWSER>
                                    <SHOW_FILE>NO</SHOW_FILE>
                                    <HAVE_DOT>YES</HAVE_DOT>
                                    <DOT_FONTNAME>FreeSans</DOT_FONTNAME>
                                    <DOT_FONTSIZE>10</DOT_FONTSIZE>
                                    <CLASS_GRAPH>YES</CLASS_GRAPH> 
                                    <COLLABORATION_GRAPH>YES</COLLABORATION_GRAPH>
                                    <GROUP_GRAPHS>YES</GROUP_GRAPHS>
                                    <INCLUDE_GRAPH>YES</INCLUDE_GRAPH>
                                    <INCLUDED_BY_GRAPH>YES</INCLUDED_BY_GRAPH>
                                    <CALL_GRAPH>YES</CALL_GRAPH>
                                    <CALLER_GRAPH>YES</CALLER_GRAPH>
                                    <GRAPHICAL_HIERARCHY>YES</GRAPHICAL_HIERARCHY>
                                    <DIRECTORY_GRAPH>YES</DIRECTORY_GRAPH>
                                    <DOT_IMAGE_FORMAT>png</DOT_IMAGE_FORMAT>
                                </properties>
                            </include>
                        </package>
                    </packaging>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
